<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.catnip.moviegate">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.catnip.moviegate.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.catnip.moviegate.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:name=".base.MovieGateApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <provider
            android:name=".services.FavoriteContentProvider"
            android:authorities="com.catnip.moviegate"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.catnip.moviegate.READ_DATABASE"
            android:writePermission="com.catnip.moviegate.WRITE_DATABASE"></provider>

        <receiver android:name=".ui.widget.FavoriteStackImageWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorite_stack_image_widget_info" />
        </receiver> <!-- Receiver -->
        <receiver
            android:name=".services.UserNotifyManager"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".ui.setting.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.main.MainActivity" />
        <activity
            android:name=".ui.search.SearchActivity"
            android:label="@string/txt_title_search" />
        <activity
            android:name=".ui.detailtvshow.DetailTvShowActivity"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.catnip.moviegate.ui.main.MainActivity" />
        </activity>
        <activity
            android:name=".ui.detailmovie.DetailMovieActivity"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.catnip.moviegate.ui.main.MainActivity" />
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".ui.widget.FavoriteWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

</manifest>